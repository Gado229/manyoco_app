<div class="container">
    <%= form_with(model: [:admin, @user], local: true) do |f| %>
      <%= render 'common/error', variable: @user %>
        <div class="form-group">
          <%= f.label :name, 'Name' %>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <%= f.label :email, 'Email address' %>
          <%= f.email_field :email %>
        </div>
        <div class="form-group">
          <%= f.label :admin, 'Admin' %>
          <%= f.hidden_field :admin, value: false %>
          <%= f.check_box :admin, {}, true, false %>
        </div>
      <hr>
      <p><b>If you want to change your password, please also enter the following</b></p>
        <div class="form-group">
          <%= f.label :password, 'Password' %>
          <%= f.password_field :password %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, 'Password confirmation' %>
          <%= f.password_field :password_confirmation %>
        </div>
          <%= f.submit 'Approuver' ,class:'btn btn-dark'%>
    <% end %>
    <hr>
  <%= link_to 'Delete user data', admin_user_path(@user.id), method: :delete, data: { confirm: 'Are you sure you want to delete it?' },class:'btn btn-danger' %>
</div>
