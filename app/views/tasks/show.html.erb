<div class="container">

  <div class="form-group">
    <strong>Title:</strong>
    <%= @task.title %>
  </div>

  <div class="form-group">
    <strong>Content:</strong>
    <%= @task.content %>
  </div>
  <div class="form-group">
    <strong>Deadline:</strong>
    <%= @task.deadline %>
  </div>
  <div class="form-group">
    <strong>Status:</strong>
    <%= @task.status %>
  </div>
  <div class="form-group">
    <strong>Priority:</strong>
    <%= @task.priority %>
  </div>

  <%= link_to 'Edit', edit_task_path(@task) %> |
  <%= link_to 'Back', tasks_path %>
</div>
