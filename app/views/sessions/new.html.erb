<div class="container">
  <h4>CONNECTION</h4>
    <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
  <table>
    <tr>
      <td><%= f.label :email, 'Email' %></td>
      <td><%= f.email_field :email %></td>
    </tr>
    <tr>
      <td><%= f.label :password, 'Password' %></td>
      <td><%= f.password_field :password %></td>
    </tr>
    <tr>
      <td><%= f.submit 'signin' %></td>
    <tr>
  </table>
    <% end %>
</div>
